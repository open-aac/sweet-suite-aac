                <a href='#' {{action 'set_start_code'}}>{{t " I have a start code" key='have_a_start_code'}}</a>
              {{/if}}
            </div>
            <div class="form-group">
              <div class="checkbox big_checkbox">
                <label style="font-weight: normal;">
                  {{input type="checkbox" checked=user.preferences.cookies}}
                  {{t "Send usage data to %app_name% for analytics, error tracking and feature improvements" key='allow_cookies'}}
                </label>
              </div>
              <div class="checkbox big_checkbox" style='margin-bottom: 10px;'>
                <label style="font-weight: normal;">
                  {{input type="checkbox" checked=user.terms_agree}}
                  By registering or using the product, you are agreeing that you have read and understood the <a href="/terms">Terms of Use and License Agreement</a>, and are capable of binding to a legal contract.
                </label>
              </div>
              {{#if persistence.online}}
                <button type="submit" class="btn btn-primary" disabled={{registering.saving}} style="width: 100px;">
                  {{#if registering.initializing}}
                    {{t "Processing..." key='processing'}}
                  {{else if registering.saving}}
                    {{t "Signing Up..." key='signing_up'}}
                  {{else}}
                    {{t "Sign Up" key='sign_up'}}
                  {{/if}}
                </button>
              {{else}}
                <button type='submit' class='btn btn-primary' disabled='true' style='width: 100px;'>
                  {{t "Not Online" key='not_online'}}
                </button>
              {{/if}}
              <a href="#" {{action "authenticateSession"}} class="text" style="padding-left: 10px;">{{t "Already Registered?" key="already_registered"}}</a>
              {{#if registering.error}}
                <p class='text-danger'>
                  {{#if registering.error.email_blocked}}
                    {{t "The email address provided has been blocked, please try a different address" key='email_blocked'}}
                  {{else if registering.error.progress}}
                    {{t "User initialization failed. Please contact support." key='user_init_failed'}}
                  {{else if registering.error.start_code}}
                    {{t "Please re-check the start code" key='check_start_code'}}
                  {{else}}
                    {{t "There was an unexpected error while registering" key='error_registering'}}
                  {{/if}}
                </p>
              {{/if}}
            </div>
          </form>
        {{else}}
          {{partial "bad-privacy-settings"}}
        {{/if}}
      </div>
      </div>
      </div>
    </div>
  {{/if}}
  <div class="col-sm-12 full_back" style="padding: 20px 10px; background: #fafafa; border-top: 30px solid #49c7e8; border-bottom: 30px solid #e86060;">
