{{else}}
  {{#unless app_state.no_linky}}
    <div class="col-sm-12 full_back" style="background: #eee; padding: 40px 10px 60px; border-top: 30px solid #f2b367;">
      <div class="col-sm-12" style="text-align: center; margin-bottom: 30px;">
        <h2>{{t "see how people are using" key='see_how'}} <span style="font-weight: 200;">{{t "%app_name_upper%" key='app_name_upper'}}</span> {{t "right now" key='right_now'}}</h2>
      </div>
      <div class="col-sm-6" style='text-align: center;'>
        <h3>{{t "For Families" key='for_families'}}</h3>
        <a {{action 'intro_video' 'eoiScclYEX4'}} href='#' class='dim_glyph_until_hover' style='position: relative;'>
          <img src='https://img.youtube.com/vi/S_6lh5d0cco/maxresdefault.jpg' style='width: 420px; height: 235px; border: 2px solid #888; padding: 6px; border-radius: 5px;'/>
          <span class='glyphicon glyphicon-play-circle' style='font-size: 80px;position: absolute;left: 168px;top: -32px;color: #fff; text-shadow: 2px 2px 5px #444, -2px -2px 5px #444, 2px -2px 5px #444, -2px 2px 5px #444;'></span>
        </a>
      </div>
      <div class="col-sm-6" style='text-align: center;'>
        <h3>{{t "For Schools" key='for_schools'}}</h3>
        <a {{action 'intro_video' 'S_6lh5d0cco'}} href='#' style='position: relative;' class='dim_glyph_until_hover'>
          <img src='https://img.youtube.com/vi/eoiScclYEX4/maxresdefault.jpg' style='width: 420px; height: 235px; border: 2px solid #888; padding: 6px; border-radius: 5px;'/>
          <span class='glyphicon glyphicon-play-circle' style='font-size: 80px;position: absolute;left: 168px;top: -32px;color: #444; text-shadow: 2px 2px 5px #fff, -2px -2px 5px #fff, 2px -2px 5px #fff, -2px 2px 5px #fff;'></span>
        </a>
      </div>
    </div>
  {{/unless}}
  {{#if app_state.domain_settings.full_domain}}
    <div class="col-sm-12 full_back" style="padding: 40px 10px 40px; background-image: url(/images/bg.jpg); background-repeat: no-repeat; background-position: center bottom; background-size: cover; border-top: 30px solid #e86060;">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="well with_bg">
      <div class="row">
        <div>
          <h2>{{t "Try <span style='font-weight: 200;'>%app_name_upper%</span> for yourself" key='try_app'}}</h2>
          <p>
            {{t "Ready to see more? Sign up now to get started!" key='sign_up_for_free'}}
          </p>
        </div>
        {{#if stashes.enabled}}
          <form class="col-sm-12 form-horizontal" {{action "saveProfile" on="submit"}}>
            <div class="form-group">
              {{input value=user.name class="form-control" id="name" title="Full Name" placeholder="Full Name"}}
            </div>
            <div class="form-group">
              {{input value=user.user_name class="form-control" id="user_name" title="user name" placeholder="User name (optional, we can pick for you)"}}
              {{#if noSpacesName}}
                <span class='text-danger'>{{t "user names can't have spaces, dots or quotes" key='no_spaces_user_name'}}</span>
              {{else if user.user_name_check.checking}}
              {{else if user.user_name_check.exists}}
                <span class='text-danger'>{{t '"%{user_name}" already exists' user_name=user.user_name}}</span>
              {{else if noName}}
                <span class='text-danger'>{{t "name or username is required" key='name_or_username_required'}}</span>
              {{/if}}
            </div>
            <div class="form-group">
              {{input value=user.email class="form-control" id="email" title="Email" placeholder="Email"}}
              {{#if badEmail}}
                <span class='text-danger'>{{t "email required" key='email_required'}}</span>
              {{/if}}
            </div>
            <div class="form-group">
              {{input type="password" value=user.password class="form-control" id="password" title="password" placeholder="Password"}}
              {{#if shortPassword}}
                <span class='text-danger'>{{t "password must be at least 6 characters" key='min_password_lower'}}</span><br/>
              {{/if}}
            </div>
            <div class="form-group">
              {{bound-select select_class="form-control" select_id="registration_type" content=registration_types selection=user.preferences.registration_type action=(action (mut user.preferences.registration_type)) }}
            </div>
            <div class='form-group'>
              {{#if start_code}}
                {{input value=user.start_code class="form-control" id="start_code" title="Start Code" placeholder="Start Code (optional, if provided)"}}
